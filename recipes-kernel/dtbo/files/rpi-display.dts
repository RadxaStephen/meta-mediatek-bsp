#include "mt8167-pinfunc.h"

/dts-v1/;
/plugin/;

/ {
	fragment@0 {
		target = <&dsi>;
		__overlay__ {
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;

			ports {
				port@0 {
					reg = <0>;

					dsi_out: endpoint {
						remote-endpoint = <&panel_in>;
					};
				};
			};

			panel@0 {
				compatible = "pumpkin,7inch-touchscreen-panel-dsi";
				reg = <0>;
				pumpkin,touchscreen = <&touchscreen>;

				port {
					panel_in: endpoint {
						remote-endpoint = <&dsi_out>;
					};
				};
			};
		};
	};

	fragment@1 {
		target = <&i2c1>;
		__overlay__ {
			clock-div = <2>;
			pinctrl-names = "default";
			pinctrl-0 = <&i2c1_pins_a>;
			status = "okay";

			touchscreen: touchscreen@0 {
				compatible = "pumpkin,7inch-touchscreen-panel";
				reg = <0x45>;
				status = "okay";
				pinctrl-0 = <&panel_pins>;
				pinctrl-names = "default";
				power-supply = <&mt6392_vgp2_reg>;
			};
		};
	};

	fragment@2 {
		target = <&mipi_tx>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@3 {
		target = <&pio>;
		__overlay__ {
			i2c1_pins_a: i2c1@0 {
				pins1 {
					pinmux = <MT8167_PIN_52_SDA1__FUNC_SDA1_0>,
						 <MT8167_PIN_53_SCL1__FUNC_SCL1_0>;
					bias-disable;
				};
			};

			panel_pins: panel_pins {
				pins {
					pinmux = <MT8167_PIN_66_LCM_RST__FUNC_GPIO66>,
						 <MT8167_PIN_67_DSI_TE__FUNC_GPIO67>;
					output-high;
				};
			};
		};
	};
};
